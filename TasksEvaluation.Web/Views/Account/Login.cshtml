@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<div asp-validation-summary="All" ></div>

<div class="wrapper">
    <link href="~/css/register.css" rel="stylesheet" />
    <h2>Login</h2>
    <form asp-action="Login" asp-controller="Account" method="post">
         
        <div class="input-box">
            <input asp-for="Email" placeholder="Enter your email" required>
        </div>
        <div class="input-box">
            <input asp-for="Password" placeholder="Enter your password" required>
        </div>
        <div class="checkbox">
            <input asp-for="RememberMe"   required>
            <span> Remember Me  </span>
        </div>
        <div class="input-box button">
            <input type="Submit" value="SIGNIN" asp-action="Index" asp-controller="Home" >
        </div>
        <div class="text">
            <h3>Do not Have an Account ? <a asp-action="Register" asp-controller="Account"> Register Now!</a></h3>
        </div>
        <div class="text">
            <h3>you forget an Password ? <a asp-action="ForgetPassword" asp-controller="Account"> Forget Password </a></h3>
        </div>
    </form>
</div>


