 @model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<link href="~/css/register.css" rel="stylesheet" />
<div class="wrapper">
    <h2>Registration</h2>
    <div asp-validation-summary="All"></div>

    <form asp-action="Register" asp-controller="Account" method="post">
    <div class="input-box">
        <input asp-for="Name" placeholder="Enter your name" required>
    </div>
    <div class="input-box">
        <input asp-for="Email" placeholder="Enter your email" required>
    </div>
    <div class="input-box">
            <input asp-for="Password" placeholder="Create password" required>
    </div>
    <div class="input-box">
            <input asp-for="ConfirmPassword" placeholder="Confirm password" required>
    </div>
        <a asp-action="Login" asp-controller="Account"></a>
        <div class="input-box button">
            <input type="Submit" value="Register Now" asp-action="Index" asp-controller="Home">
         </div>  
    <div class="text">
            <h3>Already have an account? <a asp-action="Login" asp-controller="Account">Login now</a></h3>
    </div>
</form>
</div>

    